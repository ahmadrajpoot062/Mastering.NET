@page
@model RegisterModel

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <title>Sign Up</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
  <!-- MDB CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css" rel="stylesheet">
  <style>
    @@keyframes slideInFromRight {
      0% {
        transform: translateX(60%);
        opacity: 0;
      }

      100% {
        transform: translateX(0);
        opacity: 1;
      }
    }

    .animate-slide-in {
      animation: slideInFromRight 1s ease-out;
    }

    @@media (max-width:991.5px) {
        img {
            display: none;
        }
    }

  </style>

</head>

<body>

  <section class="vh-100 d-flex align-items-center justify-content-center p-5">
    <div class="container my-5 w-75 d-flex flex-column rounded shadow p-5">
      <div>
        <div class="row d-flex align-items-center justify-content-center">
          <div class="col-md-8 col-lg-7 col-xl-6">
            <img src="~/assets/img/logo.png" class="img-fluid animate-slide-in" alt="Phone image"
              style="width: 100%; height: auto;">
          </div>
          <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
              <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

              <div data-mdb-input-init class="form-floating form-outline mb-4">
                    <input asp-for="Input.FirstName" id="firstName" class="form-control form-control-lg" autocomplete="FirstName" aria-required="true" placeholder="Enter First Name" />
                    <label asp-for="Input.FirstName" class="form-label" for="firstName">First Name</label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
              </div>
              <div data-mdb-input-init class="form-floating form-outline mb-4">
                    <input asp-for="Input.LastName" id="lastName" class="form-control form-control-lg" autocomplete="LastName" aria-required="true" placeholder="Enter Last Name" />
                    <label asp-for="Input.LastName" class="form-label" for="lastName">Last Name</label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
              </div>

              <!-- Email input -->
              <div data-mdb-input-init class="form-floating form-outline mb-4">
                <input asp-for="Input.Email" id="form1Example13" class="form-control form-control-lg" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label" for="form1Example13">Email address</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
              </div>

              <!-- Password input -->
              <div data-mdb-input-init class="form-floating form-outline mb-4">
                <input asp-for="Input.Password" id="form1Example23" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label" for="form1Example23">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
              </div>

              <div data-mdb-input-init class="form-floating form-outline mb-4">
                <input asp-for="Input.ConfirmPassword" id="confirm-password" class="form-control form-control-lg" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword" class="form-label" for="confirm-password">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
              </div>

              <!-- Submit button -->
              <button id="registerSubmit" type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-lg text-white btn-block"
                style="background-color: #569EB5;">Sign Up</button>

              <div class="divider d-flex align-items-center my-4">
                <p class="text-center fw-bold mx-3 mb-0 text-muted">Already have an account?</p>
              </div>

              <a data-mdb-ripple-init class="btn text-white btn-lg btn-block" style="background-color: #569EB5;"
                href="./Login" role="button">
                <i class="fab fa-twitter me-2"></i>Sign In
              </a>

            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Bootstrap JS and MDB JS -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>
  <partial name="_ValidationScriptsPartial" />
</body>

</html>

