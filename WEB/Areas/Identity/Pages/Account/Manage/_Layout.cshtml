<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Manage Account</title>
    <meta name="description" content="">
    <meta name="keywords" content="">

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/assets/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/assets/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/img/favicon-16x16.png">
    <link rel="manifest" href="~/assets/img/site.webmanifest">
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900&family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Nunito:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap"
          rel="stylesheet">
    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)

    <style>
		body {
			background-image: url(/assets/img/feedback-bg.jpg);
            background-size: cover;
            background-repeat: no-repeat;
            padding-top: 80px; /* Same as the height of the header */
        }

        .top {
            color: #fff;
            text-decoration: underline;
        }
    </style>

</head>
<body>
    <!-- Fixed Header Section -->
    <header id="header" class="shadow header d-flex align-items-center fixed-top" style="height: 80px;">
        <div class="container-fluid container-xl position-relative d-flex align-items-center">
            <a href="/Home/Index" class="logo d-flex align-items-center me-auto">
                <img src="~/assets/img/logo.png" alt="">
                <h1 class="sitename">Mastering .NET</h1>
            </a>
        </div>
    </header>

    <!-- Main Content Section -->
    <div class="container pt-5">
        <div class="h1 mb-5 display-5 fw-bolder fst-italic text-center shadow px-2 px-sm-0 pb-2"
             style="font-family: Verdana, Geneva, Tahoma, sans-serif; color: #3D90AA;">
            Manage your account<i class="fa fa-solid fa-gear ms-3"></i>
        </div>
        <h2 class="text-center" style="font-family: Verdana, Geneva, Tahoma, sans-serif; color: #3D90AA;">Change your account settings<i class="bi bi-pen ms-2"></i></h2>
        <div>
            <div class="container py-5">
                <div class="row">
                    <div class="col-md-3">
                        <partial name="_ManageNav" />
                    </div>
                    <div class="col-md-9 mt-3">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
