@{
    ViewData["Title"] = "Home Page";
}

@model List<Core.Entities.Contact>

@section Styles {

    <style>

        #services h2 {
            margin-bottom: 40px;
        }

        .service-box:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

        .service-box .icon i {
            font-size: 3rem;
            color: #388DA8;
        }

        .service-box h4 {
            margin-top: 20px;
            margin-bottom: 15px;
            font-weight: bold;
            color: #333;
        }

        .service-box p {
            color: #666;
        }

        .service-box {
            transition: all 0.3s ease;
        }

            .service-box:hover {
                background-color: #f0f7fa;
            }


        .dropdown-toggle {
            max-width: calc(100% - 2rem);
            display: block;
            word-wrap: break-word;
        }


        .btn-design-fill {
            background-color: #388DA8;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 18px;
            transition: background-color 0.3s ease;
        }

            .btn-design-fill:hover {
                background-color: #277080;
                color:white;
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            }

        .carousel-item {
            position: relative;
        }

        .carousel-caption {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0; /* Ensure it spans the full height */
            display: flex; /* Use flexbox */
            flex-direction:column;
            align-items: center; /* Center vertically */
            justify-content: center; /* Center horizontally */
            text-align: center; /* Center text */
            z-index: 2; /* Ensure caption is above overlay */
            color: white; /* Optional: Change text color for better visibility */
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5); /* Adjust opacity as needed */
            z-index: 1; /* Ensure the overlay is below the caption */
        }

        .carousel-control-prev,
        .carousel-control-next{
            z-index: 3; /* Ensure buttons are above overlay */
        }

        .carousel-indicators {
            z-index: 4; /* Ensure indicators are above overlay */
        }

        .carousel-caption h1 {
            font-family: 'Century Gothic';
            font-size: 3rem;
            font-weight: 700;
            color: white;
        }

        .carousel-caption p {
            font-size: 1.5rem;
            margin-top: 5px;
            color: white;
        }

        .carousel-caption a.btn {
            background-color: #388DA8;
            color: white;
            padding: 10px 20px;
            border: none;
            font-size:16px;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        @@media (max-width: 800px) {
            .carousel-caption h1 {
                font-size: 2.5rem; /* Reduce heading size */
            }

            .carousel-caption p {
                font-size: 1.3rem; /* Reduce paragraph size */
            }
        }

        @@media (max-width: 700px) {
            .carousel-caption h1 {
                font-size: 2rem; /* Reduce heading size */
            }

            .carousel-caption p {
                font-size: 1.1rem; /* Reduce paragraph size */
            }

            .carousel-caption a.btn {
                font-size: 15px; /* Reduce button font size */
                padding: 7px 12px; /* Adjust button padding */
            }
        }

        @@media (max-width: 600px) {
            .carousel-caption h1 {
                font-size: 1.5rem; /* Reduce heading size */
            }

            .carousel-caption p {
                font-size: 0.9rem; /* Reduce paragraph size */
            }

            .carousel-caption a.btn {
                font-size: 13px; /* Reduce button font size */
                padding: 5px 10px; /* Adjust button padding */
            }
        }

        @@media (max-width: 500px) {
            .carousel-caption h1 {
                font-size: 1rem; /* Reduce heading size */
            }

            .carousel-caption p {
                font-size: 0.7rem; /* Reduce paragraph size */
            }

            .carousel-caption a.btn {
                font-size: 10px; /* Reduce button font size */
                padding: 5px 10px; /* Adjust button padding */
            }
        }
        @@media (max-width: 400px) {
            .carousel-caption h1 {
                font-size: 0.8rem; /* Reduce heading size */
            }
    
            .carousel-caption p {
                font-size: 0.5rem; /* Reduce paragraph size */
            }
    
            .carousel-caption a.btn {
                font-size: 8px; /* Reduce button font size */
                padding: 4px 7px; /* Adjust button padding */
            }
        }
       
    </style>
}

