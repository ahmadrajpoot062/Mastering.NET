@model dynamic

@{
    Layout = null;
    string filePath = Model?.FilePath;
    string fileName = Model?.FileName;
    string fileExtension = Model?.Extension;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@fileName</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

        .message {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
            text-align: center;
            padding: 20px;
        }

        .download-button {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #4B98B0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    @if (fileExtension == ".pdf")
    {
        <!-- Embed the PDF file -->
        <iframe src="@filePath" title="@fileName"></iframe>
    }
    else
    {
        <!-- Display message and download button for non-PDF files -->
        <div class="message">
            <p>The extension of file "@fileName" is "@fileExtension" that is not supported by the browser. So you can't view it. Please download it using the button below.</p>
            <a href="@filePath" download="@fileName">
                <button class="download-button">Download File</button>
            </a>
        </div>
    }
</body>
</html>
