    <style>
        /* Container for the topic list and arrows */
        #topic-wrapper {
            position: relative;
            width: 100%;
            height: 35px; /* Height of the navbar */
            background-color: #388DA8;
            display: flex;
            align-items: center;
            overflow: hidden; /* Hide overflow to avoid scrollbars */
        }

        /* Arrow icons */
        .scroll-arrow {
            position: absolute;
            top: 0;
            width: 30px;
            height: 100%;
            display: none; /* Hidden by default, shown only when needed */
            align-items: center;
            justify-content: center;
            cursor: pointer;
            background-color: #3B5E7D; /* Solid background color */
            color: white; /* Arrow icon color */
            z-index: 1000;
            font-size: 1.5rem; /* Adjust size of the icon if needed */
        }

        /* Display the arrows only when content overflows */
        #scroll-left {
            left: 0;
        }

        #scroll-right {
            right: 0;
        }


        /* Container for the actual topics */
        #topic-container {
            flex-grow: 1;
            overflow: hidden;
            white-space: nowrap;
            display: flex;
            align-items: center;
            padding: 5px 40px; /* Space for the arrows */
            scroll-behavior: smooth;
            height: 100%; /* Match height to the parent container */
        }

            /* Remove margins and padding from ul */
            #topic-container ul {
                display: flex;
                align-items: center;
                height: 100%; /* Ensure the ul height matches the navbar height */
                margin: 0;
                padding: 0;
                list-style: none; /* Remove bullet points */
            }

            /* Topic list items */
            #topic-container li {
                display: flex;
                align-items: center;
                margin: 0 5px;
                padding: 0;
                height: 100%; /* Ensure li height matches the navbar height */
            }

                /* Topic links with styling */
                #topic-container li a {
                    text-decoration: none;
                    color: white;
                    padding: 5px 10px;
                    border: 1px solid white;
                    border-radius: 5px;
                    background-color: #4da2b3;
                    transition: background-color 0.3s;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    height: 100%; /* Ensure the link takes full height of the li */
                }

                    /* Hover effect for topic links */
                    #topic-container li a:hover {
                        background-color: #336d83;
                    }

        /* Adjust selected topic style */
        .selected-topic {
            background-color: #336d83;
        }

    </style>


